<LimitText>:
    max_characters: 18
    input_filter: lambda text, from_undo: text[:self.max_characters - len(self.text)]
    text: ''
    size_hint: (2.2,1)
    multiline: False
    write_tab: False
    inc_num: False

<Label>:
    color: 0, 0, 0, 1

<Button>:
    color: 1, 1, 1, 1

<LabelWidget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            
    AnchorLayout:
        anchor_x:  'center'
        anchor_y:  'top'
        BoxLayout:
            orientation:  'vertical'
            Image:
                source: 'Images/Data_matrix.png'
                size_hint_y: None
                height: '70dp'
            
            GridLayout:
                cols : 4
                size_hint: (1,0.2)
                padding: [10, 10]
                row_force_default: True
                row_default_height: '30dp'
                
                Label:
                    text: 'Line 1: Date'
                
                CheckBox:
                    id: date
                    color: 1,0,0,2
                    on_active: root.activate_checkbox(self, 'date')
                    
                Label:
                    text: 'Line 4: Increment'
                
                CheckBox:
                    id: date
                    color: 1,0,0,2
                    on_active: root.activate_checkbox(self, 'inc_num')


            GridLayout:
                cols : 2
                padding: [10, 10]
                row_force_default: True
                row_default_height: '30dp'
                
                
                Label:
                    text: 'Text line 1:'
                    
                LimitText:
                    id: text1
                    text: ''
            
                Label:
                    text: 'Text line 2:'
                    
                LimitText:
                    id: text2
                    text: ''
                       
                Label:
                    text: 'Text line 3:'
                    
                LimitText:
                    id: text3
                    
                Label:
                    text: 'Text line 4:'
                    
                LimitText:
                    id: text4
                    
            GridLayout:
                cols : 1
                padding: [10, 10]
                row_force_default: True
                row_default_height: '30dp'
                
                Label:
                    text: 'IP of printer (ex: 192.168.1.1)'
                        
                TextInput:
                    id: ip
                    size_hint:(.1,.1)   
    AnchorLayout:
        anchor_x: "center"
        anchor_y: 'bottom'
        
        
        BoxLayout:
            height:  '50dp'
            Label:
                size_hint:(.1,.1)
                text: '#N to print:'
                    
            TextInput:
                id: number
                size_hint:(.1,.1)
                multiline: False
                write_tab: False
                input_filter: 'int'
                text: '1'
    
                    
            Button:
                id: print_label
                size_hint:(.1,.1)
                text: "Print label"
                on_press: app.print_label()
